{
    "version": "2.0.0",
    "help" : "to run the task Terminal --> Run Task --> task_name", 
    "tasks": [
      {
        "label": "Build LaTeX PDF (script)",
        "type": "shell",
        "command": "./zz_run_script.sh",
        "args": ["${fileBasenameNoExtension}"],
        "options": {
          "cwd": "${workspaceFolder}"
        },
        "presentation": {
          "reveal": "always",
          "panel": "dedicated",
          "clear": true
        },
        "problemMatcher": []
      },
      {
        "label": "Clean LaTeX build",
        "type": "shell",
        "command": "./zz_clean_script.sh",
        "args": ["${fileBasenameNoExtension}"],
        "options": {
          "cwd": "${workspaceFolder}"
        },
        "presentation": {
          "reveal": "always",
          "panel": "dedicated",
          "clear": true
        },
        "problemMatcher": []
      }
    ]
  }
  